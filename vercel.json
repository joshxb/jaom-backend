{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        },
        { "src": "/api/(.*)", "dest": "routes/api.php" }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "",


        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    },
    "crons": [
        {
            "path": "/api/due_date/todos",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/users/check/email_verified_at",
            "schedule": "0 7 * * *"
        }
    ]
}
